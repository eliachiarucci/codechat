{{#if user}}
<div class="navbar container-fluid">
  <div class="row navbar-row justify-content-between align-items-center">
    <div class="col-3">
      <h4>CODECHAT</h4>
    </div>
    <div class="col-9 d-flex justify-content-end navbar-a-container">
      <a href="/feed">Feed</a> &nbsp;
      <a href="/newpost">New Post</a> &nbsp;
      <a href="/logout">Logout</a> &nbsp;
      <div class="img-user-navbar-container">
        <img src="{{user.imageUrl}}" alt="">
        <h5 style="margin: 0">{{user.firstname}} {{user.lastname}}</h5>
      </div>
    </div>
  </div>
</div>
{{else}}
<div class="navbar container-fluid">
  <div style="height: 40px;" class="row navbar-row justify-content-between align-items-center">
    <div class="col-3">
      <h4>CODECHAT</h4>
    </div>
    <div class="col-9 d-flex justify-content-end navbar-a-container">
      <a href="/">Home</a> &nbsp;
      <a href="/login">Login</a> &nbsp;
      <a href="/signup">Sign up</a> &nbsp;
    </div>
  </div>
</div>
