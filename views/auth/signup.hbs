<body class="signupLoginbody">
    <div class="signupLogin-form">
        <form action="/signup" method="post">
            <h2>Register</h2>
            <p class="hint-text">Create your account. It's free and only takes a minute.</p>
            <div class="form-group">
                <div class="row">
                    <div class="col"><input type="text" class="form-control" name="firstname" placeholder="First Name">
                    </div>
                    <div class="col"><input type="text" class="form-control" name="lastname" placeholder="Last Name">
                    </div>
                </div>
            </div>
            <div class="form-group">
                <input type="email" class="form-control" name="email" placeholder="Email">
            </div>
            <div class="form-group">
                <input type="password" class="form-control" name="password" placeholder="Password">
            </div>
            <div class="form-group">
                <input type="password" class="form-control" name="confirmpassword" placeholder="Confirm Password">
            </div>

            <section>
                <p>Select your profile picture</p>
                <form action="/upload" method="post" enctype="multipart/form-data">
                    <input type="file" name="photo" />
                    <input type="submit" value="Save" />
                    <br>
                    <br>
                    <div class="form-group">
                        <label class="form-check-label"><input type="checkbox"> I accept the <a href="/privacy">Terms of
                                Use</a> &amp; <a href="/privacy">Privacy Policy</a></label>
                    </div>
                </form>
            </section>

            <section>
                {{#each pictures}}
                <h3>{{ this.name }}</h3>
                <img src="{{ this.path }}" alt="{{ this.originalName }}" />
                {{/each}}
            </section>

            <div class="form-group">
                <button type="submit" class="btn btn-warning btn-lg btn-block">Register Now</button>
            </div>

            {{#if errorMessage }}
            <p class="error-message"> {{errorMessage}} </p>
            {{/if}}

        </form>
        <div class="text-center">Already have an account? <a href="/login">Sign in</a></div>
    </div>
</body>